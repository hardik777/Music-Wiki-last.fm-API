<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/divSearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorProgress" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSearchBG"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:background="@drawable/search_view_border"
            android:fontFamily="@font/comfortaa"
            android:hint="@string/search"
            android:paddingLeft="@dimen/_22sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_22sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:singleLine="true"
            android:textColor="@color/colorListHeaderText"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignTop="@+id/txtSearch"
            android:layout_alignBottom="@+id/txtSearch"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/imgClearSearch"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignTop="@+id/txtSearch"
            android:layout_alignBottom="@+id/txtSearch"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_5sdp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorProgress" />

</LinearLayout>